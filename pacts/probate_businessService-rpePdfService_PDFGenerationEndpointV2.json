{
  "provider": {
    "name": "rpePdfService_PDFGenerationEndpointV2"
  },
  "consumer": {
    "name": "probate_businessService"
  },
  "interactions": [
    {
      "description": "A request to generate a Probate PDF document",
      "request": {
        "method": "POST",
        "path": "/pdfs",
        "headers": {
          "Content-Type": "application/vnd.uk.gov.hmcts.pdf-service.v2+json; charset=UTF-8"
        },
        "body": {
          "template": "<!DOCTYPE html>\n<html xmlns:th=\"http://www.thymeleaf.org\">\n    <head>\n        <title th:remove=\"all\" th:text=\"${title}\">Probate application</title>\n        <meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\" />\n        <style type=\"text/css\">\n\n            body {\n                font-family: \"nta\", sans-serif;\n                margin-top: 25px;\n                margin-bottom: 25px;\n                margin-right: 50px;\n                margin-left: 50px;\n            }\n\n            .table-content {\n                display: block;\n            }\n            tr.border_bottom td {\n                border-bottom: 0.5pt solid black;\n            }\n            .no-page-break {\n                page-break-inside : avoid;\n                -fs-keep-with-inline : keep;\n                -fs-table-paginate: paginate;\n            }\n            td.column1 {\n                width: 50%;\n            }\n            td.column2 {\n                width: 10%;\n            }\n            td.column3{\n                width: 40%;\n            }\n        </style>\n    </head>\n    <body>\n        <table>\n            <tbody class=\"table-content\">\n            <tr>\n                <td class=\"column1\"></td>\n                <td class=\"column2\"></td>\n                <td class=\"column3\"></td>\n            </tr>\n            <tr>\n                <td colspan=\"3\" valign=\"top\" style=\"font-weight: bold\"><h1>{{pageTitle}}</h1></td>\n            </tr>\n            <tr>\n                <td colspan=\"3\">\n                    <p>{{mainParagraph}}</p>\n              </td>\n            </tr>\n\n            {% for section in sections %}\n            <div class=\"no-page-break\">\n            <tr class=\"border_bottom\">\n                <td colspan=\"3\" valign=\"top\" style=\"font-weight: bold\"><h2>{{ section.title}}</h2></td>\n            </tr>\n            {% for questionAndAnswerRow in section.questionAndAnswers %}\n            <tr class=\"border_bottom\">\n                <td class=\"column1\">{{ questionAndAnswerRow.question }}</td>\n                <td class=\"column2\"/>\n                <td class=\"column3\">\n\n                    {% for ans in questionAndAnswerRow.answers %}\n                    <div>\n                        {{ ans}}\n                    </div>\n                    {% endfor %}\n\n                </td>\n            </tr>\n            {% endfor %}\n            </div>\n            {% endfor %}\n            </tbody>\n        </table>\n    </body>\n</html>\n\n",
          "values": {
            "mainParagraph": "paragraph",
            "pageTitle": "title",
            "sections": [
              {
                "title": "title",
                "type": null,
                "questionAndAnswers": [

                ]
              }
            ]
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/pdf"
        },
        "matchingRules": {
          "body": {
            "$": {
              "matchers": [
                {
                  "match": "contentType",
                  "value": "application/octet-stream"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/pdf"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "A request to generate a Probate PDF document"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.1.11"
    }
  }
}
